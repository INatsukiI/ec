<%= render 'layouts/customer_header' %>
<div class="container">
  <div class="mb-5">
    <h4 class="m-5">
      <span class="bg-light px-4">
        配送先編集
      </span>
  </h4>
  <%= form_with model: @address, url: address_path, method: :patch do |f| %>
  <div class="row no-gutters mb-2">
    <div class="col-3">郵便番号(ハイフンなし)</div>
    <div class="col-7"><%= f.text_field :post_code %></div>
  </div>
  <div class="row no-gutters mb-2">
    <div class="col-3">住所</div>
    <div class="col-7"><%= f.text_field :address, class: "w-75" %></div>
  </div>
  <div class="row no-gutters">
    <div class="col-3">宛名</div>
    <div class="col-6"><%= f.text_field :name %></div>
    <div class="col-2"><%= f.submit "変更内容を保存", class: "btn btn-success px-4" %></div>
  </div>
  <% end %>
</div>
<%= render 'layouts/footer' %>