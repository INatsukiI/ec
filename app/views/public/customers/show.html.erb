<%= render 'layouts/customer_header' %>
<div class="container">
  <h4 class="m-5">
    <span class="bg-light px-4" style="margin-left: 80px;">
      マイページ
    </span>
  </h4>
    <div class="row no-gutters mb-3">
        <h5 class="col-1 font-weight-bold py-2 mr-3">登録情報</h5>
        <div class="col-2"><%= link_to "編集する" , edit_customers_path , class: "btn btn-success px-4" %></div>
        <div class="col-9"></div>
    </div>
    <div class="row no-gutters mb-5">
        <div class="col-6">
            <table border="1" style="border-collapse: collapse">
                <tr>
                    <td class="py-2 col-2 pl-1 bg-light">氏名</td>
                    <td class="py-2 col-6 pl-1"><%= @customer.last_name %> <%= @customer.first_name %></td>
                </tr>
                <tr>
                    <td class="py-2 col-2 pl-1 bg-light">カナ</td>
                    <td class="py-2 col-2 pl-1"><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
                </tr>
                <tr>
                    <td class="py-2 col-2 pl-1 bg-light">郵便番号</td>
                    <td class="py-2 col-2 pl-1"><%= @customer.post_code %></td>
                </tr>
                <tr>
                    <td class="py-2 col-2 pl-1 bg-light">住所</td>
                    <td class="py-2 col-2 pl-1"><%= @customer.address %></td>
                </tr>
                <tr>
                    <td class="py-2 col-2 pl-1 bg-light">電話番号</td>
                    <td class="py-2 col-2 pl-1"><%= @customer.phone_number %></td>
                </tr>
                <tr>
                    <td class="py-2 col-2 pl-1 bg-light">メールアドレス</td>
                    <td class="py-2 col-2 pl-1"><%= @customer.email %></td>
                </tr>
            </table>
        </div>
        <div class="col-6"></div>
    </div>

    <div class="row mb-4">
        <div class="col-1 font-weight-bold pt-1">配送先</div>
        <div class="col-2"><%= link_to "一覧を見る", addresses_path , class: "btn btn-primary" %></div>
        <div class="col-9"></div>
    </div>
    <div class="row mb-4">
        <div class="col-1">注文履歴</div>
        <div class="col-2">一覧を見る</div>
        <div class="col-9"></div>
    </div>
</div>
<%= render 'layouts/footer' %>