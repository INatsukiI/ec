<%= render 'layouts/admin_header' %>
<div class="container mb-5">
  <h4 class="m-5">
    <span class="bg-light px-4">
      ジャンル一覧・追加
    </span>
  </h4>
  <%= form_with model: @genre, url: admin_genres_path ,class: "mb-5 row no-gutters" do |f| %>
    <%= f.label "ジャンル名" ,class: "pt-2  mr-5 ml-2 col-1" %>
    <%= f.text_field :name , placeholder: " ジャンル名" ,class: "mr-5 col-3" %>
    <%= f.submit "新規登録", class: "btn btn-success px-4 col-2" %>
  <% end %>
  <div class="row no-gutters">
    <div class="col-5">
      <div class="py-2 col-11 bg-light font-weight-bold border-top border-bottom">ジャンル</div>
      <div class="col-11">
        <% @genres.each do |genre| %>
            <div class="row py-2 border-bottom">
              <div class="col-4 py-2">
                <%= genre.name %>
              </div>
              <div class="col-4"></div>
              <div class="col-4">
                <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= render 'layouts/footer' %>
