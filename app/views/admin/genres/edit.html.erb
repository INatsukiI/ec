<%= render 'layouts/admin_header' %>

<div class="container mb-5">
  <h4 class="m-5">
    <span class="bg-light px-4">
      ジャンル編集
    </span>
  </h4>
  <%= form_with model: @genre, url: admin_genre_path, class: "mb-5 row no-gutters", method: :patch do |f| %>
    <%= f.label "ジャンル名" ,class: "pt-2  mr-5 ml-2 col-1" %>
    <%= f.text_field :name , placeholder: " ジャンル名" ,class: "mr-5 col-3" %>
    <%= f.submit "変更を保存", class: "btn btn-success px-4 col-2" %>
  <% end %>
</div>

<%= render 'layouts/footer' %>